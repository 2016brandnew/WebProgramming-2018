extends ../layout

block content
  .container
    h1.main-title Profile Update
    form(action=`/users/${user._id}?_method=PUT`, method='POST')
      .form-group
        label(for='name') Name
        input.form-control(type='text', id='name', name='name', placeholder='Your name', value=user.name)
      .form-group
        label(for='email') Email address
        input.form-control(type='email', id='email', name='email', placeholder='Email', value=user.email)
      .form-group
        label(for='name') address
        input.form-control(type='text', id='address', name='address', placeholder='Your address', value=user.address)
      .form-group
        label(for='name') sex
        input.form-control(type='text', id='sex', name='sex', placeholder='Your sex', value=user.sex)
      .form-group
        label(for='name') birthday
        input.form-control(type='text', id='birthday', name='birthday', placeholder='Your birthday', value=user.birthday)        

      
      .form-group
        label(for='current_password') Current Password
        input.form-control(type='password', id='current_password', name='current_password', placeholder='Current Password')
      .form-group
        label(for='password') Password
        input.form-control(type='password', id='password', name='password', placeholder='Password')
      .form-group
        label(for='password_confirmation') Password Confirmation
        input.form-control(type='password', id='password_confirmation', name='password_confirmation', placeholder='Password Confirmation')
      a.btn.btn-outline-secondary(href='javascript:window.history.back();') Back 
      | 
      button.btn.btn-outline-warning(type='submit') Update
      |
